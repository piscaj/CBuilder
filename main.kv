ManagerScreen:
    MenuScreen:
    CLScreen:
    EditScreen:

<ListItemWithEdit>:
    id:list_item
    icon_left:icon_left
    ListItemDelete:
        id:icon_left
        list_item:list_item
        icon: root.icon

<ConfirmDelete>:
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "120dp"


<MenuScreen>:
    name:"menu_screen"
    MDRaisedButton:
        id:CBbut
        pos_hint:{"center_x": 0.5, "center_y": 0.5}
        increment_width: "75dp"
        text:"CBuilder"
        on_press: app.root.current = 'cl_screen'

<CLScreen>:
    name:"cl_screen"
    cList:cList
    cScroll:cScroll
    on_enter: root.refresh_callback()
    MDScrollViewRefreshLayout:
        id:cScroll
        refresh_callback: root.refresh_callback
        root_layout: root
        CList:
            id:cList
            cScroll:cScroll
    CActionButton:
        data: {'code-braces': 'New','send': 'Send','settings': 'Settings'}
        cList:cList
        rotation_root_button: True
        callback:self.callback

<EditScreen>:
    name:"EView"
    CActionButton:
        data: {'check': 'Save','end': 'Cancel'}
        rotation_root_button: True
        callback:self.callback

          
 
