#:import hex kivy.utils.get_color_from_hex
#:import SlideTransition kivy.uix.screenmanager.SlideTransition
#:import NoTransition kivy.uix.screenmanager.NoTransition

ManagerScreen:
    #MenuScreen:
    CLScreen:
    FtpScreen:
    EditScreen:
    SettingsScreen:
    ViewCodeScreen:
<ListItemWithEdit>:
    id:list_item
    icon_left:icon_left
    ListItemDelete:
        id:icon_left
        list_item:list_item
        icon: root.icon

<Progress>:
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "60dp"
    MDSpinner:
        size_hint: None, None
        size: dp(46), dp(46)
        pos_hint: {'center_x': .5, 'center_y': .5}
        active: True
<MenuScreen>:
    name:"menu_screen"
    MDRaisedButton:
        id:CBbut
        pos_hint:{"center_x": 0.5, "center_y": 0.5}
        increment_width: "75dp"
        text:"CBuilder"
        on_release: app.root.current = 'cl_screen'

<CLScreen>:
    id:cScreen
    name:"cl_screen"
    cList:cList
    cScroll:cScroll
    canvas:
        Color:
            rgba: hex('#ffffff')
        RoundedRectangle:
            size: self.width, self.height
            pos: self.pos
            radius: [0]
    MDScrollViewRefreshLayout:
        id:cScroll
        refresh_callback: root.refresh
        root_layout: root
        pos_hint:{"top": 1}
        size_hint: None,None
        size: root.width, root.height - c_toolbar.height
        CList:
            id:cList
            cScreen:cScreen
            cScroll:cScroll
    CLBottomToolbar:
        id: c_bottombar
        cScreen:cScreen
        cList:cList
        MDToolbar:
            id:c_toolbar
            c_bottombar:c_bottombar
            title: "CBuilder"
            icon: "plus"
            type: "bottom"
            left_action_items: [["json", lambda x: c_bottombar.goViewCode()]]
            right_action_items: [["cloud-outline", lambda x: c_bottombar.goFTP()],["settings", lambda x: c_bottombar.goSettings()]]
            on_action_button: c_bottombar.addItem()
<FtpScreen>:
    id:fScreen
    fHost:fHost
    fUser:fUser
    fPass:fPass
    fPath:fPath
    name:"f_screen"
    canvas:
        Color:
            rgba: hex('#ffffff')
        RoundedRectangle:
            size: self.width, self.height
            pos: self.pos
            radius: [0]
    MDTextField:
        id:fHost
        fScreen:fScreen
        hint_text: "Host"
        helper_text: "enter a command string."
        size_hint: 0.5, None
        helper_text: "enter processor host name or ip."
        helper_text_mode: "on_focus"
        pos_hint:{"center_x": 0.5, "center_y": 0.9}
        multiline: False
    MDTextField:
        id:fUser
        fScreen:fScreen
        hint_text: "User"
        size_hint: 0.5, None
        helper_text: "enter processor username."
        helper_text_mode: "on_focus"
        multiline: False
        pos_hint:{"center_x": 0.5, "center_y": 0.7}
    MDTextField:
        id:fPass
        fScreen:fScreen
        hint_text: "Pass"
        size_hint: 0.5, None
        helper_text: "enter processor password."
        helper_text_mode: "on_focus"
        multiline: False
        pos_hint:{"center_x": 0.5, "center_y": 0.5}
    MDTextField:
        id:fPath
        fScreen:fScreen
        hint_text: "Path"
        size_hint: 0.5, None
        helper_text: "enter directory to put/get config."
        helper_text_mode: "on_focus"
        multiline: False
        pos_hint:{"center_x": 0.5, "center_y": 0.3}   
    GridLayout:
        #adaptive_height: True
        #md_bg_color: app.theme_cls.primary_color
        size_hint_y: None
        height: self.minimum_height
        pos_hint:{"center_x": 0.5, "center_y": 0.1}
        padding:10
        spacing:10
        cols:5
        rows:1
        Widget:
        MDIconButton:
            id:fSave
            icon: "content-save-outline"
            user_font_size: "36sp"
            fScreen:fScreen
            pos_hint:{"center_x": 0.5, "center_y": 0.5}
            increment_width: "75dp"
            text:"Save"
            on_release: fScreen.save()
        MDIconButton:
            id:fSend
            fScreen:fScreen
            icon: "cloud-upload-outline"
            user_font_size: "36sp"
            pos_hint:{"center_x": 0.5, "center_y": 0.5}
            increment_width: "75dp"
            text:"Upload"
            on_release: fScreen.show_confirmation_upload()
        MDIconButton:
            id:fRet
            fScreen:fScreen
            icon: "cloud-download-outline"
            user_font_size: "36sp"
            pos_hint:{"center_x": 0.5, "center_y": 0.5}
            increment_width: "75dp"
            text:"Retrieve"
            on_release: fScreen.show_confirmation_download()
        Widget:
    MDIconButton:
        id:fClose
        fScreen:fScreen
        icon: "close"
        user_font_size: "36sp"
        pos_hint:{"center_x": 0.93, "center_y": 0.07}
        increment_width: "75dp"
        text:"Exit"
        on_release: fScreen.goBack() 
<EditScreen>:
    id:eScreen
    eBottombar:eBottombar
    eName:eName
    eDes:eDes
    eCom:eCom
    name:"e_screen"
    canvas:
        Color:
            rgba: hex('#ffffff')
        RoundedRectangle:
            size: self.width, self.height
            pos: self.pos
            radius: [0]
    EditBottomToolbar:
        id:eBottombar
        eScreen:eScreen
        title: "Back"
        left_action_items: [["arrow-left-circle-outline", lambda x: self.goBack()]]
    MDTextField:
        id:eName
        eScreen:eScreen
        hint_text: "Room Name"
        size_hint: 0.5, None
        helper_text: "enter room name or friendly name."
        helper_text_mode: "on_focus"
        pos_hint:{"center_x": 0.5, "center_y": 0.85}
        multiline: False
    MDTextField:
        id:eDes
        eScreen:eScreen
        hint_text: "Description"
        size_hint: 0.5, None
        helper_text: "enter a brief description."
        helper_text_mode: "on_focus"
        multiline: False
        pos_hint:{"center_x": 0.5, "center_y": 0.65}
    MDTextField:
        id:eCom
        eScreen:eScreen
        hint_text: "Command"
        size_hint: 0.5, None
        helper_text: "enter a command string."
        helper_text_mode: "on_focus"
        multiline: False
        pos_hint:{"center_x": 0.5, "center_y": 0.45}    
    MDGridLayout:
        adaptive_height: True
        #md_bg_color: app.theme_cls.primary_color
        pos_hint:{"center_x": 0.5, "center_y": 0.3}
        padding:10
        spacing:10
        cols:4
        rows:1
        Widget:
        MDRaisedButton:
            id:eSave
            eScreen:eScreen
            pos_hint:{"center_x": 0.5, "center_y": 0.5}
            increment_width: "75dp"
            text:"Save"
            on_release: eScreen.saveEdits()
        MDRaisedButton:
            id:eCancel
            pos_hint:{"center_x": 0.5, "center_y": 0.5}
            increment_width: "75dp"
            text:"Cancel"
            on_release:
                app.root.transition = SlideTransition( duration=0.6, direction="right")
                app.root.current = 'cl_screen'
        Widget:
        
    
<SettingsScreen>:
    id:sScreen
    name:"s_screen"
    canvas:
        Color:
            rgba: hex('#737475')
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [0]
    MDIconButton:
        id:sClose
        sScreen:sScreen
        icon: "close"
        user_font_size: "36sp"
        pos_hint:{"center_x": 0.93, "center_y": 0.07}
        increment_width: "75dp"
        opposite_colors:True
        text:"Exit"
        on_release: sScreen.goBack()
<ViewCodeScreen>:
    id:vScreen
    vLabel:vLabel
    name:"v_screen"
    canvas:
        Color:
            rgba: hex('#737475')
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [0]
    GridLayout:
        size_hint_y: None
        height: root.height
        pos_hint:{"top": 1}
        padding:10
        spacing:10
        cols:3
        rows:1
        Widget:
        ScrollView:
            pos_hint:{"top": 1}
            size_hint: None,None
            size: "350dp", root.height
            Label:
                id: vLabel
                padding: [40, 40]
                size_hint: None, None   
                size: self.texture_size
                text: "JSON"
        Widget:
    MDIconButton:
        id:vClose
        vScreen:vScreen
        icon: "close"
        opposite_colors:True
        user_font_size: "36sp"
        pos_hint:{"center_x": 0.93, "center_y": 0.07}
        increment_width: "75dp"
        text:"Exit"
        on_release: vScreen.goBack()


