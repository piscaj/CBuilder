ManagerScreen:
    MenuScreen:
    CLScreen:
    EditScreen:
    SettingsScreen:

<ListItemWithEdit>:
    id:list_item
    icon_left:icon_left
    ListItemDelete:
        id:icon_left
        list_item:list_item
        icon: root.icon

<ConfirmDelete>:
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "120dp"


<MenuScreen>:
    name:"menu_screen"
    MDRaisedButton:
        id:CBbut
        pos_hint:{"center_x": 0.5, "center_y": 0.5}
        increment_width: "75dp"
        text:"CBuilder"
        on_press: app.root.current = 'cl_screen'

<CLScreen>:
    id:cScreen
    name:"cl_screen"
    cList:cList
    cScroll:cScroll
    on_enter: root.refresh_callback()
    MDScrollViewRefreshLayout:
        id:cScroll
        refresh_callback: root.refresh_callback
        root_layout: root
        size_hint: None,None
        size: root.width, root.height - c_toolbar.height
        CList:
            id:cList
            cScroll:cScroll
    CLToolbar:
        id: c_toolbar
        cScreen:cScreen
        cAction:cAction
        pos_hint: {"top": 1}
        elevation: 10
        title: "CBuilder"
        right_action_items: [["settings", lambda x: self.goSettings()]]
    CActionButton:
        id:cAction
        data: {'code-braces': 'New','send': 'Send'}
        cList:cList
        cScreen:cScreen
        rotation_root_button: True
        callback:self.callback
   

<EditScreen>:
    name:"e_screen"
    CActionButton:
        data: {'check': 'Save','end': 'Cancel'}
        rotation_root_button: True
        callback:self.callback

<SettingsScreen>:
    id:sScreen
    name:"s_screen"
    sToolbar:sToolbar
    SettingsToolbar:
        id: sToolbar
        sScreen:sScreen
        pos_hint: {"top": 1}
        elevation: 10
        title: "Setup"
        left_action_items: [["arrow-left-circle", lambda x: self.back()]]

    
          
 
